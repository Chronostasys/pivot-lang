use std::io;
use core::panic;
macro test {
    ($a:@id = $b:@id) => {
        io::print_s($a);
        io::print_s($b);
    };
}

pub fn test_string() void {
    let s = "hello world!\n";
    test!(s 
    = s);
    panic::assert(s.len == 13);
    panic::assert(s.byte_len == 13);
    let ss = "你好啊！";
    panic::assert(ss.len == 4);
    panic::assert(ss.byte_len == 12);
    s.append(ss);
    panic::assert(s.len == 17);
    panic::assert(s.byte_len == 25);
    io::print_s(s);
    return;
}

