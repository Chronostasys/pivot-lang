use std::io;
use core::panic;
macro test {
    ($($a:@id = $b:@expr,)*) => {
        $(
            io::print_s($a);
            io::printi64ln($b);
        )*

    };
    ($a:@id) => {
        io::print_s($a);
    };
}

pub fn test_string() void {
    let s = "hello world!\n";
    test!(s = 1+2*(3+4), s = 5*2,);
    test!(s);
    panic::assert(s.len == 13);
    panic::assert(s.byte_len == 13);
    let ss = "你好啊！";
    panic::assert(ss.len == 4);
    panic::assert(ss.byte_len == 12);
    s.append(ss);
    panic::assert(s.len == 17);
    panic::assert(s.byte_len == 25);
    io::print_s(s);
    return;
}

